{
  "name": "mtgx",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "ios": "react-native run-ios && react-native log-ios",
    "android": "react-native run-android && react-native log-android",
    "test": "ava --verbose --no-cache && jest --verbose --no-cache",
    "jest-watch": "jest --watch --verbose",
    "ava-watch": "ava --watch --verbose",
    "test-coverage": "jest --coverage --forceExit",
    "lint-check": "standard --verbose | snazzy",
    "lint-fixcode": "standard --fix --verbose | snazzy",
    "flow-check": "flow --show-all-errors",
    "codeclimate-coverage": "codeclimate-test-reporter < ./coverage/lcov.info",
    "update-coverage": "npm run test-coverage && npm run codeclimate-coverage",
    "precommit": "npm run flow-check && npm run lint-check",
    "prepush": "jest --bail --forceExit --silent && ava --fail-fast"
  },
  "dependencies": {
    "firebase": "^3.6.10",
    "lodash": "^4.17.4",
    "ramda": "^0.23.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-native": "0.41.2",
    "react-native-animatable": "^1.1.0",
    "react-native-drawer": "^2.3.0",
    "react-native-i18n": "^1.0.0",
    "react-native-router-flux": "^3.37.0",
    "react-native-vector-icons": "^4.0.0",
    "react-redux": "^5.0.2",
    "realm": "^1.0.2",
    "redux": "^3.6.0",
    "redux-form": "^6.5.0",
    "redux-saga": "^0.14.3"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-eslint": "^7.1.1",
    "babel-polyfill": "^6.23.0",
    "babel-register": "^6.24.0",
    "codeclimate-test-reporter": "^0.4.1",
    "flow-bin": "^0.40.0",
    "husky": "^0.13.1",
    "jest": "^19.0.2",
    "mockery": "^2.0.0",
    "react-native-mock": "^0.3.1",
    "snazzy": "^6.0.0",
    "standard": "^9.0.1"
  },
  "jest": {
    "preset": "react-native",
    "testMatch": [
      "**/__tests__/Jest/**/*.js?(x)"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/"
    ]
  },
  "ava": {
    "files": [
      "__tests__/Ava/**/*.js",
      "!__tests__/Ava/Setup.js"
    ],
    "require": [
      "babel-register",
      "babel-polyfill",
      "react-native-mock/mock",
      "./__tests__/Ava/Setup"
    ],
    "babel": "inherit"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "it",
      "__DEV__",
      "expect",
      "jest"
    ],
    "ignore": [
      "flow/"
    ]
  },
  "rnpm": {
    "assets": [
      "./src/Assets/Fonts"
    ]
  }
}
